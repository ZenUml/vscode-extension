{
  "name": "zenuml",
  "displayName": "zenuml support",
  "description": "Render ZenUML sequence diagram",
  "version": "1.1.0",
  "publisher": "mrcoder",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZenUml/vscode-extension"
  },
  "keywords": [
    "zenuml",
    "sequence diagram",
    "diagram",
    "uml"
  ],
  "icon": "assets/zenuml-icon.png",
  "readme": "./README.md",
  "categories": [
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:zenuml",
    "onCommand:vscode-zenuml.preview"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "engines": {
    "vscode": "^1.93.0",
    "node": ">=18.x"
  },
  "browser": "./dist/extension.js",
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "zenuml",
        "aliases": [
          "ZenUML",
          "zenuml"
        ],
        "configuration": "./zenuml.language-configuration.json",
        "extensions": [
          ".zen",
          ".zenuml"
        ]
      }
    ],
    "commands": [
      {
        "command": "vscode-zenuml.preview",
        "category": "ZenUML",
        "title": "Preview ZenUML Diagram"
      }
    ],
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "zenuml.preview.theme": {
          "type": "string",
          "default": "default",
          "enum": [
            "default",
            "neon",
            "neon-light",
            "clean-light",
            "clean-dark"
          ],
          "enumDescriptions": [
            "%configuration.theme.default%",
            "%configuration.theme.dark%",
            "%configuration.theme.neon%",	
            "%configuration.theme.neon-light%",
            "%configuration.theme.clean-light%",
            "%configuration.theme.clean-dark%"
          ],
          "description": "%configuration.theme%"
        },
        "zenuml.preview.renderMode": {
          "type": "string",
          "default": "dynamic",
          "enum": [
            "dynamic",
            "static"
          ],
          "enumDescriptions": [
            "%configuration.renderMode.dynamic%",
            "%configuration.renderMode.static%"
          ],
          "description": "%configuration.renderMode%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "changelog": "auto-changelog --template keepachangelog --output=CHANGELOG.md",
    "release": "standard-version"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@zenuml/core": "^3.24.5",
    "auto-changelog": "^2.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "html-loader": "^4.2.0",
    "mocha": "^10.1.0",
    "raw-loader": "^4.0.2",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
